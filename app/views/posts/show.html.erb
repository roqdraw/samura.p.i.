<div class="scroll-page">
    <div class="scroll-window">
        <div class="sign-up-scroll">
            <div class="sign-up-form">

                <div class="scroll-image-icon"></div>

                <div class="signup-label">
                    <p class="scroll-title-big" for=""> <%= @post.title %> </p>
                </div>

                <div class="signup-label">
                    <p class="scroll-title" for=""> <%= @post.subtitle %> </p>
                </div>

                <div class="signup-label">
                    <p class="body-para" for=""> <%= @post.description %> </p>
                </div>

                <div class="signup-label-author">
                    <p class="body-heading-scroll">By:</p>

                    <% if current_user.id == @user.id and current_user.id == @post.user_id%>
                        <a href="/user"><p class="student-username"><%= @user.username %></p></a>
                    <% elsif @user.id == @post.user_id %>
                        <a href="/users/<%= @user.id%>"><p class="student-username"><%= @user.username %></p></a>
                    <% end %>

                </div>

            </div>
        </div>
        <a href="/posts/#scroll-index" class=jump-back> Back to Scrolls </a>
    </div>
</div>